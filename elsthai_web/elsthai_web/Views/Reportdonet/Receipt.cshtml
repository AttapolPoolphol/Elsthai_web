@model elsthai_web.Models.Reportdonet;
@{
    ViewBag.Title = "Details";
    var db = ViewData["data"] as Reportdonet;
}
<html>
<head>
    <style>
        * {
            font-family: 'Bai Jamjuree', sans-serif;
        }

        #report {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #report td, #report th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #report tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #report tr:hover {
                background-color: #ddd;
            }

            #report th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #4CAF50;
                color: white;
            }

        .aaa {
            padding-left: 60px;
            width: 170px;
        }

        .bbb {
            padding-left: 30px;
        }
    </style>
</head>
<body>
    <link href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree&display=swap" rel="stylesheet">
    
    <table border="0" align="center" style="width: 800px;">
        <tr style="height: 100px; vertical-align: text-top; ">
            <th colspan="4" align="center">
                มูลนิธิการศึกษาเพื่อชีวิตและสังคม <br>THE FOUNDATION OF EDUCATION FOR LIFE AND SOCLETY (ELS)<br>
                47 หมู่บ้านพหลโยธินกอล์ฟ ถนนหพลโยธิน 19/1 แขวงลาดยาว เขตจตุจักร กรุงเทพ 10900
            </th>
        </tr>

        <tr>
            <td colspan="3" align="right">
                เลขที่
            </td>
            <td align="center" id="numbernaja" style="width: 90px; ">
               <p>@db.no</p>
            </td>
        </tr>
        <tr>
            <td align="right" colspan="2" style="padding-bottom: 30px;" line-height="10px;">วันที่ @db.date</td>
            <td align="center" colspan="2" id="datenumber" style="width: 20%;"></td>
        </tr>
        <tr align="center" style="height: 50px; vertical-align: text-top; " font-size="18px;"><th colspan="2">ใบเสร็จรับเงิน</th></tr>
    </table>

    <table border="0" align="center" style="width: 800px;">
        <tr style="height: 40px; ">
            <td td class="aaa">
                <strong>
                    ได้รับเงินจาก  : 
                </strong>
            </td>
            <td id="namefor" class="bbb"><p>@db.name_user</p></td>
        </tr>
        <tr style="height: 40px; ">
            <td class="aaa">
                <strong>บริจาคโครงการ  : </strong>
            </td>
            <td id="projectfor" class="bbb"><p>@db.donateproject</p></td>
        </tr>
        <tr style="height: 40px; ">
            <td class="aaa">
                <strong>จำนวนเงิน  : </strong>
            </td>
            <td id="Volume" class="bbb"><p>@db.price</p></td>
        </tr>

        <td align="center">
            <strong>
                @db.money
            </strong>
        </td>

        <table border="0" id="tbLicense" align="center" style="width: 800px;">
            <tr style="height: 100px; ">
                <td style="vertical-align: bottom;"><hr width="150px" color="#000000" align="center"></td>
                <td style="vertical-align: bottom;"><hr width="180px" color="#000000" align="center"></td>
            </tr>
            
            <tr>
                <td style="vertical-align: top; text-align: center;">ผู้รับเงิน</td>
                <td style="vertical-align: top; text-align: center;">ลายมือผู้รับมอบอำนาจ</td>
            </tr>
        </table>
</body>
</html>
