                            <input class="form-control" type="text" value="" id="phone" name="phone">
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">ลงทะเบียน</button>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->
